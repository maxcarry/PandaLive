<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_back_imageview"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:src="@drawable/personal_back_img" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="用户反馈"
            android:textColor="@color/colorWhite"
            android:textSize="60px" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="20px"
        android:weightSum="2"
        >
        <RelativeLayout
            android:id="@+id/meet_bt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:id="@+id/meet_thread"
                android:visibility="invisible"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="遇到的问题"
                android:textColor="@color/colorBlack"
                android:layout_centerInParent="true"
                android:textSize="45px"
                android:id="@+id/meet_title"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_black"
            />
        <RelativeLayout
            android:id="@+id/common_bt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:id="@+id/common_thread"
                android:visibility="invisible"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常见问题"
                android:textColor="@color/colorBlack"
                android:layout_centerInParent="true"
                android:textSize="45px"
                android:id="@+id/common_title"
                />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/problem_show"
        ></FrameLayout>
</LinearLayout>