<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_back_imageview"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:src="@drawable/personal_back_img" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="用户反馈"
            android:textColor="@color/colorWhite"
            android:textSize="60px" />
    </RelativeLayout>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:background="@color/pe_bg_light_blue"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/user_rb_left"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="遇到的问题"
            android:textSize="30px"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            />
        <RadioButton
            android:id="@+id/user_rb_right"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="常见问题"
            android:textSize="30px"
            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="1" />
    </RadioGroup>


    <android.support.v4.view.ViewPager
        android:layout_marginTop="10px"
        android:id="@+id/user_content_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>