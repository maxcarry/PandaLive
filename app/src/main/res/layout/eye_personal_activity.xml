<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    //
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/personal_back_imageview"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:src="@drawable/personal_back_img" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="@color/colorWhite"
            android:textSize="60px" />
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="30px"/>

    <LinearLayout
        android:id="@+id/personal_one_linearlayout"
        android:layout_width="1020px"
        android:layout_height="230px"
        android:layout_gravity="center"
        android:background="@drawable/eye_personal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pers_user_icon"
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_marginLeft="30px"
            android:src="@drawable/personal_login_head" />

        <TextView
            android:id="@+id/pers_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:text="点击登录"
            android:textColor="@color/colorblack"
            android:textSize="45px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15px"/>
    <LinearLayout
        android:id="@+id/personal_two_linearlayout"
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <ImageView
            android:layout_marginLeft="30px"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/personal_history_img"/>
    <TextView
        android:layout_marginLeft="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="观看历史"
        android:textColor="@color/colorblack"
        android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15px"/>
    <LinearLayout
        android:id="@+id/personal_three_linearlayout"
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <ImageView
            android:layout_marginLeft="30px"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/personal_shoucang_img"/>
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textColor="@color/colorblack"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15px"/>
    <LinearLayout
        android:id="@+id/personal_four_linearlayout"
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <ImageView
            android:layout_marginLeft="30px"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/personal_set_img"/>
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="45px"
            android:textColor="@color/colorblack"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>