<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/revise_back_imageview"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:src="@drawable/personal_back_img" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="修改昵称"
            android:textColor="@color/colorWhite"
            android:textSize="60px" />
        <TextView
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="保存"
            android:textSize="45px"
            android:textColor="@color/color_hui"/>
    </RelativeLayout>

<EditText
    android:layout_marginTop="30px"
    android:layout_width="1000px"
    android:layout_height="150px"
    android:layout_gravity="center"
    android:background="@drawable/revise_button"/>
    <TextView
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:layout_marginLeft="90px"
        android:layout_marginRight="70px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45px"
        android:text="用户昵称只能为汉字、字母、下划线组成；长度为3-10个汉字（6-20个非汉字字符）；不能为空；不能有禁词；敏感词；不能重复"/>
</LinearLayout>