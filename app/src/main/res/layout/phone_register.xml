<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="60px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海外用户暂不支持手机号注册,您可以使用邮箱注册"
            android:textColor="@color/colorBlue"
            android:textSize="43px" />

        <EditText
            android:id="@+id/username_phone"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginTop="20px"
            android:background="@drawable/edit_shape"
            android:hint="  账号:请输入手机账号"
            android:textSize="40px" />

        <TextView
            android:id="@+id/hint_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gallery_red" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_image"
                android:layout_width="600px"
                android:layout_height="match_parent"
                android:background="@drawable/edit_shape"
                android:hint="  请输入图片验证码"
                android:textSize="40px"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/getcode_view"
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/hint_imagecheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gallery_red" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_phone"
                android:layout_width="600px"
                android:layout_height="match_parent"
                android:background="@drawable/edit_shape"
                android:hint="  请输入短信验证码"
                android:textSize="40px" />

            <Button
                android:id="@+id/getcode_bt"
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:text="获取验证码"
                android:textColor="@color/colorWhite" />


        </RelativeLayout>

        <TextView
            android:id="@+id/hint_phonecheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gallery_red" />

        <EditText
            android:id="@+id/password_phone"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginTop="50px"
            android:background="@drawable/edit_shape"
            android:hint="  请输入密码"
            android:textSize="40px" />

        <TextView
            android:id="@+id/hint_surepawd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gallery_red" />

        <CheckBox
            android:id="@+id/protocol_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:button="@null"
            android:drawableLeft="@drawable/check_selecter"
            android:text="我已阅读并同意《央视网网络服务使用协议》"
            android:textColor="@color/colorBlue"
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gallery_red"
            android:id="@+id/hint_xieyi"
            />

        <Button
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginTop="30px"
            android:background="@drawable/reg_bt_shape"
            android:text="注册"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>