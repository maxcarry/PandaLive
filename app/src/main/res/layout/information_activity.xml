<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/information_back_imageview"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:src="@drawable/personal_back_img" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="@color/colorWhite"
            android:textSize="60px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40px"/>
    <LinearLayout
        android:layout_width="1020px"
        android:layout_height="230px"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/colorWhite">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:src="@drawable/about_sign"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="160px"
                android:layout_width="150px"
                android:layout_height="150px"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:layout_width="100px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="40px"/>
    <LinearLayout
        android:id="@+id/information_name_linearlayout"
        android:layout_width="1020px"
        android:layout_height="180px"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/colorWhite">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="160px"
                android:textSize="45px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="央视网友815888"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:layout_width="100px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="980px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="600px"
        android:text="退出登录"
        android:textColor="@color/colorWhite"
        android:textSize="45px"
        android:background="@drawable/user_button"/>
</LinearLayout>