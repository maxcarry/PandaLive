<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/install_back_imageview"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:src="@drawable/personal_back_img" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/colorWhite"
            android:textSize="60px" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:text="常用功能"
        android:gravity="center_vertical"
        android:layout_marginLeft="20px"/>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否接受消息推送"
            android:textColor="@color/colorblack"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="120px"
                android:layout_height="130px"
                android:layout_alignParentRight="true"
                android:src="@drawable/switch_close"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="1020px"
        android:layout_height="3px"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动播放下一集"
            android:textColor="@color/colorblack"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="120px"
                android:layout_height="130px"
                android:layout_alignParentRight="true"
                android:src="@drawable/switch_close"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="1020px"
        android:layout_height="3px"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textColor="@color/colorblack"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="160px"
            android:textSize="45px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00MB"
            />
            <ImageView
                android:layout_marginRight="30px"
                android:layout_width="100px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_delete_img"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="其他"
        android:gravity="center_vertical"
        android:layout_marginLeft="20px"/>
    <LinearLayout
        android:id="@+id/install_user_linearlayout"
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户反馈及帮助"
            android:textColor="@color/colorblack"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="1020px"
        android:layout_height="3px"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测升级"
            android:textColor="@color/colorblack"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="1020px"
        android:layout_height="3px"
        />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜欢我们，给我们好评"
            android:textColor="@color/colorblack"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_gravity="center_horizontal"
        android:layout_width="1020px"
        android:layout_height="3px"
        />
    <LinearLayout
        android:id="@+id/personal_two_linearlayout"
        android:layout_gravity="center"
        android:layout_width="1020px"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/eye_personal">
        <TextView
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于熊猫频道"
            android:textColor="@color/colorblack"
            android:textSize="45px"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="50px"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:src="@drawable/personal_enter_img"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>