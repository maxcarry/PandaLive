<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <RelativeLayout
        android:id="@+id/personal_hy_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#FFF">

        <ImageView
            android:id="@+id/live_adapter_img"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/_no_img" />

        <TextView
            android:id="@+id/live_adapter_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lpanda_bottom_gra"
            android:drawableLeft="@drawable/play"

            android:gravity="left|center_vertical"

            android:paddingLeft="15px"
            android:text="02:39"
            android:textColor="#FFF"
            android:textSize="20px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/live_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="13dp"
            android:text="《精彩一刻》 20170827 奶爸，你今天对我有意见蛮？"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/live_adapter_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="2017-08-27 11:34:11"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>