<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    //
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:background="@color/colorPrimary"
    android:id="@+id/linearLayout">
    <ImageView
        android:id="@+id/eyeweb_back_imageview"
        android:layout_gravity="center_vertical"
        android:layout_width="130px"
        android:layout_height="130px"
        android:src="@drawable/personal_back_img"/>
    </LinearLayout>
    <WebView
        android:id="@+id/eyeweb_webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:background="@color/colorWhite"
            android:src="@drawable/eyepanda_collect"
            android:id="@+id/eyeweb_collect_imageview"
            />

        <ImageView
            android:id="@+id/eyeweb_share_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:src="@drawable/share" />
    </LinearLayout>
</RelativeLayout>