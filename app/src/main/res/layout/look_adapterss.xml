<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="700px"
            android:layout_height="300px"
            android:layout_margin="30px"
            android:id="@+id/look_img"
            />
        <RelativeLayout
            android:layout_width="200px"
            android:layout_height="70px"
            android:background="@drawable/lpanda_bottom_gra"
            android:layout_alignBottom="@id/look_img"
            android:layout_alignLeft="@id/look_img"
            >
            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:background="@drawable/lpanda_live_layer"
                android:layout_centerVertical="true"
                android:id="@+id/dian_video"
                android:layout_marginLeft="15px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10px"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dian_video"
                android:textSize="38px"
                android:id="@+id/look_time"
                android:text=" Live"
                />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/look_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>