<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorGray"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="40px"
        >
        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/videoplayer_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="200px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="45px"
                android:layout_marginLeft="50px"
                android:layout_marginTop="30px"
                android:id="@+id/title_item"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简解"
                android:textSize="35px"
                android:layout_marginTop="20px"
                android:layout_below="@id/title_item"
                android:layout_alignLeft="@id/title_item"
                />
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/lpanda_show"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25px"
                android:id="@+id/spread_ima_item"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:id="@+id/brief_ln"
            android:layout_marginTop="10px"
            android:orientation="vertical"
            android:padding="50px"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:text="asdf"
                android:id="@+id/brief_te"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>