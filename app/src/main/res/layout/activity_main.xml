<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.pandalive.ui.MainActivity">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:id="@+id/radio"
        android:weightSum="5"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >

        <RadioButton
            android:id="@+id/home_radiobt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/nav_bc_shpe"
            android:button="@null"
            android:drawablePadding="5px"
            android:drawableTop="@drawable/home_nav_bt"
            android:gravity="center"
            android:paddingLeft="47px"
            android:paddingRight="47px"
            android:paddingTop="20px"
            android:text="首页"

            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/nav_bc_shpe"
            android:drawableTop="@drawable/tab_panda_live_normal"
            android:text="熊猫直播"
            android:drawablePadding="5px"
            android:paddingTop="20px"
            android:gravity="center"
            android:id="@+id/live_radiobt"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/nav_bc_shpe"
            android:drawableTop="@drawable/video_nav_bt"
            android:text="滚滚视频"
            android:drawablePadding="5px"
            android:paddingTop="20px"
            android:gravity="center"
            android:id="@+id/video_radiobt"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/nav_bc_shpe"
            android:drawableTop="@drawable/eyes_nav_bt"
            android:text="熊猫播报"
            android:drawablePadding="5px"
            android:paddingTop="20px"
            android:gravity="center"
            android:id="@+id/eye_radiobt"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="1"
            android:background="@drawable/nav_bc_shpe"
            android:drawableTop="@drawable/china_nav_bt"
            android:text="直播中国"
            android:drawablePadding="5px"
            android:paddingTop="20px"
            android:gravity="center"
            android:id="@+id/china_radiobt"
            />
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fm_show"
        android:layout_above="@id/radio"
        >

    </FrameLayout>

</RelativeLayout>
