<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >



        <RelativeLayout
            android:id="@+id/live_relat"
            android:layout_width="match_parent"
            android:layout_height="290px"
            android:layout_margin="10px">

            <ImageView
                android:id="@+id/live_direct_adapter_img"
                android:layout_width="match_parent"
                android:layout_height="290px"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/default_time_view"
                android:drawableLeft="@drawable/lpanda_live_layer"
                android:drawablePadding="3dp"
                android:text="Live"
                android:layout_marginLeft="10px"
                android:textSize="50px"
                android:textColor="@color/colorWhite"
                />
        </RelativeLayout>
<TextView
    android:id="@+id/live_direct_adapter_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="成都基地高清精切路"
    />



</LinearLayout>
